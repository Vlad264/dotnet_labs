@model System.Collections.Generic.List<EffectiveEmployee.Models.Employee>

<html>
<head>
    <title>Employees</title>
    <link rel="stylesheet" type="text/css" href="~/css/Site.css" />
</head>
<body>
<h3>Работники</h3>
<h5>Кликните по строке чтобы открыть проекты</h5>
<div>
    <table class="main_table">
        <thead>
        <tr>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Город</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr onclick="document.location = '@Url.Action("Projects", "Main", new {id = item.Id})'">
                <td>
                    @Html.DisplayFor(model => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Patronymic)
                </td>
                <td>
                    @Html.DisplayFor(model => item.City)
                </td>
                <td>
                    <a href="@Url.Action("Employee", "Main", new {id = item.Id})">Редактировать</a>
                    <a href="@Url.Action("RemoveEmployee", "Main", new {id = item.Id})">Удалить</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <br/>
    <button class="main_button" onclick="document.location = '@Url.Action("Employee", "Main", new {id = 0})'">Добавить работника</button>
    <button class="main_button" onclick="document.location = '@Url.Action("Project")'">Добавить проект</button>
    <button class="main_button" onclick="document.location = '@Url.Action("Premium")'">Посмотреть премии</button>
</div>
</body>
</html>
